= form_for @server do |f|
  - if @server.errors.any?
    #error_explanation
      %h2= "#{pluralize(@server.errors.count, "error")} prohibited this server from being saved:"
      %ul
        - @server.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :category_id
    = f.text_field :category_name, data: {autocomplete_source: Category.order(:name).map(&:name)}
  .actions
    = f.submit 'Save'


/= f.collection_select :category_id, Category.order(:name), :id, :name